// Program: Write a program to generate a pyramid of numbers(e.g., 1, 12, 123, etc).
// Input: rows = 4
// Output:
// 1
// 12
// 123
// 1234

function generateNumberPyramid(rows) {
  for (let i = 1; i <= rows; i++) {
    let line = "";
    for (let j = 1; j <= i; j++) {
      line += j;
    }
    console.log(line);
  }
}

const rows = 4;
generateNumberPyramid(rows);
