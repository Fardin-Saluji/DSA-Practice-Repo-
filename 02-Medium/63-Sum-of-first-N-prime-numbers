// Problem: Write a program to calculate the sum of the first N prime numbers
// Input: N = 4
// Output: 17

function isPrime(num) {
  if (num < 2) return false;
  for (let i = 2; i * i <= num; i++) {
    if (num % i === 0) return false;
  }
  return true;
}

function sumOfFirstNPrimes(N) {
  let count = 0;
  let num = 2;
  let sum = 0;

  while (count < N) {
    if (isPrime(num)) {
      sum += num;
      count++;
    }
    num++;
  }

  return sum;
}

const N = 4;
console.log(`The sum of the first ${N} prime numbers is:`, sumOfFirstNPrimes(N));
