// Problem: Print a pattern where rows alternate between two characters
// Input: n = 4;
// Output:
// ABAB
// BABA
// ABAB
// BABA

function printAlternatingPattern(n) {
    for (let i = 0; i < n; i++) {
        let row = "";

        for (let j = 0; j < n; j++) {
            if ((i + j) % 2 === 0) {
                row += "A";
            } else {
                row += "B";
            }
        }

        console.log(row);
    }
}

printAlternatingPattern(4);
