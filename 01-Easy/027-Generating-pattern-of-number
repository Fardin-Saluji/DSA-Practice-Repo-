// Problem: Write a program to generate number patterns(e.g., sequential numbers in a matrix)
// Input: rows = 3
// Output: 
// 1
// 2 3
// 4 5 6

function generateNumberPattern(rows) {
    let num = 1;
    for (let i = 1; i <= rows; i++) {
        let line = "";
        for (let j = 1; j <= i; j++) {
            line += num + " ";
            num++;
        }
        console.log(line.trim());
    }
}

const rows = 3;
generateNumberPattern(rows);
